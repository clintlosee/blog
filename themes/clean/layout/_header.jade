//
    if theme.logo
      a(href= config.root)
        img(src= theme.logo, alt= config.title, title= config.title)
    h1
      a(href= config.root, alt= config.title, title= config.title, itemprop='headline')= config.title
    p(itemprop='description')!= config.description
    nav(itemscope, itemtype='https://schema.org/SiteNavigationElement')
      ul
        each url, label in theme.menu
          li(itemprop='name')
            a(href= url, alt= label, title= label, itemprop='url')= label


// Page Header
// Set your background image for this header in bgImage
header(class='intro-header bgImage')
    div(class='container')
        div(class='row')
            div(class='col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1')
                div(class='site-heading')
                    h1= config.title
                    hr(class='small')
                    span(class='subheading', itemprop='description')!= config.description
