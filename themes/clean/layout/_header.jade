// Page Header
// Set your background image for this header in bgImage
if is_home() || is_page()
    header(class='intro-header bgImage')
        div(class='container')
            div(class='row')
                div(class='col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1')
                    div(class='site-heading')
                        if page.title
                            h1= page.title
                        else if is_home()
                            h1= config.subtitle
                        hr(class='small')
                        span(class='subheading', itemprop='description')!= config.description
if is_post()
    header(class='intro-header bgImagePost')
        div(class='container')
            div(class='row')
                div(class='col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1')
                    div(class='site-heading')
                        if page.title
                            h1= page.title
                        else if is_home()
                            h1= config.subtitle
                        hr(class='small')
                        span(class='subheading', itemprop='description')!= config.description
