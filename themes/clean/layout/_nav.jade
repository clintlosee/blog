// Navigation
nav(itemscope, itemtype='https://schema.org/SiteNavigationElement', class='navbar navbar-default navbar-custom navbar-fixed-top')
    div(class='container-fluid')
        // Brand and toggle get grouped for better mobile display
        div(class='navbar-header page-scroll')
            button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span(class='sr-only') Toggle navigation
                span(class='icon-bar')
                span(class='icon-bar')
                span(class='icon-bar')
            a(href= config.root)
                img(src= theme.logo, alt= config.title, title= config.title, class='logo navbar-logo')
            a(href= config.root, alt= config.title, title= config.title, itemprop='headline', class='navbar-brand')= config.title

        // Collect the nav links, forms, and other content for toggling
        div#bs-example-navbar-collapse-1(class='collapse navbar-collapse')
            ul(class='nav navbar-nav navbar-right')
                each url, label in theme.menu
                    li(itemprop='name')
                        a(href= url, alt= label, title= label, itemprop='url')= label
